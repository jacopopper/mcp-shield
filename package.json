{
  "name": "mcp-shield",
  "version": "1.0.0",
  "description": "Security middleware for MCP (Model Context Protocol) - PII detection, injection protection, policy enforcement",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./integrations/use": {
      "types": "./dist/src/integrations/use.d.ts",
      "import": "./dist/src/integrations/use.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node --test dist/**/*.test.js",
    "test:ts": "node --experimental-strip-types --test test/**/*.test.ts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "security",
    "middleware",
    "pii",
    "injection",
    "llm",
    "ai-safety"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}